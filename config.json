{
    "server": {
        "port": "8080",
        "environment": "development"
    },
    "redis": {
        "host": "localhost",
        "port": 6379,
        "password": "",
        "db": 0
    },
    "database": {
        "host": "localhost",
        "port": 5433,
        "user": "gateway",
        "password": "password",
        "dbname": "gateway",
        "sslmode": "disable"
    },
    "jwt": {
        "secret": "my-secret-key",
        "expiry_hours": 24
    },
    "analytics": {
        "enabled": true,
        "retention_days": 90,
        "batch_size": 100,
        "flush_interval_sec": 5
    },
    "services": [
        {
            "path": "/api/users",
            "targets": [
                "http://localhost:3001",
                "http://localhost:3002",
                "http://localhost:3003"
            ],
            "load_balancer": "round-robin",
            "circuit_breaker": {
                "max_failures": 5,
                "timeout_seconds": 30,
                "half_open_success": 1
            },
            "health_check": {
                "endpoint": "/health",
                "interval_seconds": 10,
                "timeout_seconds": 5,
                "max_failures": 3
            }
        },
        {
            "path": "/api/orders",
            "targets": [
                "http://localhost:3004",
                "http://localhost:3005"
            ],
            "load_balancer": "least_connections",
            "circuit_breaker": {
                "max_failures": 3,
                "timeout_seconds": 60,
                "half_open_success": 2
            },
            "health_check": {
                "endpoint": "/health",
                "interval_seconds": 15,
                "timeout_seconds": 5,
                "max_failures": 2
            }
        }
    ],
    "rate_limit_tiers": [
        {
            "name": "basic",
            "requests_per_minute": 60,
            "requests_per_hour": 1000,
            "algorithm": "fixed_window"
        },
        {
            "name": "pro",
            "requests_per_minute": 1000,
            "requests_per_hour": 50000,
            "algorithm": "token_bucket"
        },
        {
            "name": "enterprise",
            "requests_per_minute": 10000,
            "requests_per_hour": 500000,
            "algorithm": "sliding_window"
        }
    ]
}